<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
      <DebugType>full</DebugType>
      <CodeAnalysisRuleSet>..\stylecop.ruleset</CodeAnalysisRuleSet>
      <Version>1.0.1</Version>
      <Authors>Aljaz Simonic</Authors>
      <Company>Aljaz Simonic</Company>
      <Description>The validation framework helping programmers to easily trasform object property values.</Description>
      <PackageLicenseUrl>https://opensource.org/licenses/MIT</PackageLicenseUrl>
      <PackageProjectUrl>https://github.com/aljazsim/transformation-framework-for-net/</PackageProjectUrl>
      <RepositoryUrl>https://github.com/aljazsim/transformation-framework-for-net.git</RepositoryUrl>
      <RepositoryType>GIT</RepositoryType>
      <PackageTags>Transformation</PackageTags>
      <SignAssembly>true</SignAssembly>
      <AssemblyOriginatorKeyFile>key.pfx</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DefensiveProgrammingFramework" Version="1.0.2" />
    <PackageReference Include="StyleCop.Analyzers" Version="1.0.2" />
  </ItemGroup>

</Project>
